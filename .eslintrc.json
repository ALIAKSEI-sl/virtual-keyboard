{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "plugins": ["import"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "always"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-param-reassign": ["error", { "props": false }],
    "no-lonely-if": 0,
    "class-methods-use-this": "off"
  }
}
